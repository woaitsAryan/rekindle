{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
      "dependsOn": ["^build", "^db:generate"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"db:generate": {
      "cache": false
    },
		"db:migrate:deploy": {},
		"db:push": {},
		"db:seed": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"generate": {
			"dependsOn": ["^generate"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"//#lint:root": {}
	}
}
